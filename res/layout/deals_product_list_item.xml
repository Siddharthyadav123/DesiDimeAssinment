<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/productTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/Black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/productUpdateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="update time"
                    android:textColor="@color/DarkGray"
                    android:textSize="17dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/productPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Rs 10000"
                        android:textColor="@color/Blue"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPerOffTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/productPriceTextView"
                        android:paddingLeft="10dp"
                        android:text="(30% off)"
                        android:textColor="@color/Blue"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/productCalculatePriceOffTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/productPerOffTextView"
                        android:paddingLeft="10dp"
                        android:text="999"
                        android:textColor="@color/DarkGray"
                        android:textSize="15dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottomButtoncontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ededed"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/commentImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/comment_logo" />

            <TextView
                android:id="@+id/commentCounterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/commentImageView"
                android:paddingLeft="5dp"
                android:text="11"
                android:textColor="@color/Black"
                android:textSize="17dp" />

            <View
                android:id="@+id/seprator1"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/commentCounterTextView"
                android:background="@color/DarkGray" />

            <ImageView
                android:id="@+id/shareImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/seprator1"
                android:paddingLeft="5dp"
                android:src="@drawable/share_logo" />

            <TextView
                android:id="@+id/shareCounterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shareImageView"
                android:paddingLeft="5dp"
                android:text="11"
                android:textColor="@color/Black"
                android:textSize="17dp" />

            <View
                android:id="@+id/seprator2"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/shareCounterTextView"
                android:background="@color/DarkGray" />

            <TextView
                android:id="@+id/productProviderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="at Flipkart"
                android:textColor="@color/Blue"
                android:textSize="17dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>